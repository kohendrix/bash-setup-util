# Aliases =============================

# commands extensions
alias ll="ls -la"
alias checkport="lsof -i"

# VS Code
alias vsc-init="sh $HOME/util/scripts/initialize-vscode-workspace.sh"

# ssh-keygen
alias rsa-keygen="ssh-keygen -t rsa -b 4096 -C"
alias ed-keygen="ssh-keygen -o -t ed25519 -C"

# React
alias reactapp="yarn create react-app"

# Cypress
alias cy="yarn cypress open"
alias cyr="yarn cypress run -b chrome --headless"

# C++
alias ccomp="sh $HOME/util/scripts/gcc-compile.sh"
alias crun="sh $HOME/util/scripts/c-run.sh"

# docker
alias dc="docker-compose"